<Page x:Class="TheDocManager.Views.UploadPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Upload Document">

    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <TextBlock Text="Upload Document" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center"/>

            <Button Content="Select File..." Height="30" Click="SelectFileButton_Click" />
            <TextBlock x:Name="SelectedFileTextBlock" Margin="0,10,0,0" Text="No file selected." TextWrapping="Wrap" />

            <TextBlock Text="Select Upload Folder:" FontWeight="SemiBold" Margin="0,20,0,5"/>
            <TreeView x:Name="FolderTreeView" Height="200" SelectedItemChanged="TreeView_selectedItemChanged"/>

            <Button Content="Upload" Height="30" Margin="0,20,0,0" Click="UploadButton_Click" IsEnabled="False" x:Name="UploadButton"/>
        </StackPanel>
    </Grid>
</Page>
